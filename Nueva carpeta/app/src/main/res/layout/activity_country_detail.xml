<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bandera -->
        <ImageView
            android:id="@+id/imageViewFlag"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:contentDescription="Bandera del país"
            android:layout_marginBottom="16dp"/>

        <!-- Información del País -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del País"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewOfficialName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Oficial: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewCapital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Capital: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Región: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewSubregion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subregión: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Población: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewCodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Códigos ISO: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewCurrencies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monedas: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idiomas: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas: "
                    android:textSize="16sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Clima de la Capital -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clima Actual de la Capital"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <ProgressBar
                    android:id="@+id/progressBarWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/weatherContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageViewWeatherIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="Ícono del clima"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temperatura: "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condición: "
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewWind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Viento: "
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humedad: "
                        android:textSize="16sp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>